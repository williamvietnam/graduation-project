#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@kbrandwijk/swagger-to-graphql/bin/swagger2graphql" "$@"
else 
  exec node  "$basedir/../@kbrandwijk/swagger-to-graphql/bin/swagger2graphql" "$@"
fi
